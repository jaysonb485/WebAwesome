@inherits WAComponentBase
<wa-menu @ref="@Element"
         id="@Id"
         @attributes="@AdditionalAttributes"
         style="@StyleNames"
         class="@ClassNames"
         slot="@(IsSubMenu ? "submenu" : "")"
         size="@SizeString">
    @ChildContent
</wa-menu>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;

    /// <summary>
    /// Set to true if this menu is a nested in a WAMenu
    /// </summary>
    [Parameter]
    public bool IsSubMenu { get; set; } = false;

    /// <summary>
    /// The menu's size.
    /// </summary>
    [Parameter]
    public Enums.Size Size { get; set; } = Enums.Size.Inherit;
    string SizeString
    {
        get
        {
            return Size switch
            {
                Enums.Size.Small => "small",
                Enums.Size.Medium => "medium",
                Enums.Size.Large => "large",
                Enums.Size.Inherit => "inherit",
                _ => "inherit"
            };
        }
    }
}
