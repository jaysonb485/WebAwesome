@inherits WAComponentBase

<wa-animation @ref="@Element"
              id="@Id"
              @attributes="@AdditionalAttributes"
              slot="@Slot"
              name="@Name"
              play="@Play"
              delay="@Delay"
              direction="@DirectionString"
              duration="@Duration"
              easing="@Easing"
              end-delay="@EndDelay"
              style="@StyleNames"
              class="@ClassNames"
            iterations="@Iterations">
    @ChildContent
</wa-animation>

