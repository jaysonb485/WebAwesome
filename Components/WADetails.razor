@inherits WAComponentBase
<wa-details @ref="@Element"
            id="@Id"
            @attributes="@AdditionalAttributes"
            style="@StyleNames"
            class="@ClassNames"
            slot="@Slot"
            summary="@Title"
            disabled="@Disabled"
            appearance="@AppearanceString"
            open="@IsOpen"
            name="@GroupName"
            icon-placement="@IconPlacementString">
    @if (ExpandIcon != null || !String.IsNullOrWhiteSpace(ExpandIconName))
    {
        <WAIcon Icon="@ExpandIcon" IconName="@ExpandIconName" Slot="expand-icon"></WAIcon>
    }
    @if (CollapseIcon != null || !String.IsNullOrWhiteSpace(CollapseIconName))
    {
        <WAIcon Icon="@CollapseIcon" IconName="@CollapseIconName" Slot="collapse-icon"></WAIcon>
    }
    @if (DetailsTitle != null)
    {
        <span slot="summary">
            @DetailsTitle
        </span>
    }
    @ChildContent
    @DetailsBody
</wa-details>

