@inherits WAComponentBase
<wa-tab-group @ref="@Element"
                id="@Id"
                @attributes="@AdditionalAttributes"
                style="@StyleNames"
                class="@ClassNames"
                placement="@TabPlacementString"
                active="@ActiveTab"
                no-scroll-controls="@(!ShowScrollControls)">
    @ChildContent
</wa-tab-group>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Enables the scroll arrows that appear when tabs overflow. Defaults to true.
    /// </summary>
    [Parameter]
    public bool ShowScrollControls { get; set; } = true;

    /// <summary>
    /// Sets the active tab.
    /// </summary>
    [Parameter]
    public string? ActiveTab { get; set; }

    /// <summary>
    /// The placement of the tabs.
    /// </summary>
    [Parameter]
    public Enums.TabPlacement TabPlacement { get; set; } = Enums.TabPlacement.Top;
    string TabPlacementString
    {
        get
        {
            return TabPlacement switch
            {
                Enums.TabPlacement.Top => "top",
                Enums.TabPlacement.Bottom => "bottom",
                Enums.TabPlacement.Start => "start",
                Enums.TabPlacement.End => "end",
                _ => "top"
            };
        }
    }

}
