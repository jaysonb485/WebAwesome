@inherits WAComponentBase
<wa-tree @ref="@Element"
         id="@Id"
         @attributes="@AdditionalAttributes"
         style="@StyleNames"
         class="@ClassNames"
         slot="@Slot"
         selection="@SelectionString">
    @if (ExpandIcon != null || !String.IsNullOrWhiteSpace(ExpandIconName))
    {
        <WAIcon Icon="@ExpandIcon" IconName="@ExpandIconName" Slot="expand-icon"></WAIcon>
    }
    @if (CollapseIcon != null || !String.IsNullOrWhiteSpace(CollapseIconName))
    {
        <WAIcon Icon="@CollapseIcon" IconName="@CollapseIconName" Slot="collapse-icon"></WAIcon>
    }

    @ChildContent
</wa-tree>
