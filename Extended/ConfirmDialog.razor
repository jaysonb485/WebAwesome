<WADialog @ref="@DialogReference"
          Id="@Id"
          @attributes="@AdditionalAttributes"
          Style="@StyleNames"
          Class="@ClassNames"
          Slot="@Slot"
          Title="@Title"
          LightDismiss="false" DialogClosed="OnDialogClosed">
    <DialogBody>
        @if (ChildContent != null)
        {
            @ChildContent
        }
        else if (!string.IsNullOrEmpty(Message))
        {
            <p>@Message</p>
        }
    </DialogBody>
    <DialogFooter>
        <WAButton Appearance="ButtonAppearance.Plain" @onclick="() => OnNoClick()">@CancelButtonText</WAButton>
        <WAButton Appearance="ButtonAppearance.Accent" @onclick="() => OnYesClick()">@ConfirmButtonText</WAButton>
    </DialogFooter>
</WADialog>

